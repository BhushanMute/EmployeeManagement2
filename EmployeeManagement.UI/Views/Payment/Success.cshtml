@model PaymentResponse
@{
        ViewData["Title"] = "Payment Successful";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card border-success shadow-lg">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-check-circle"></i> Payment Successful
                    </h4>
                </div>
                <div class="card-body text-center">
                    <div class="mb-4">
                        <i class="fas fa-check-circle text-success" style="font-size: 4rem;"></i>
                    </div>

                    <div class="card bg-light mb-3">
                        <div class="card-body">
                            <p class="mb-2">
                                <strong>Order ID:</strong><br />
                                <code>@Model.OrderId</code>
                            </p>
                            <p class="mb-2">
                                <strong>Transaction ID:</strong><br />
                                <code>@Model.TransactionId</code>
                            </p>
                            <p class="mb-2">
                                <strong>Amount Paid:</strong><br />
                                <span class="text-success fs-5"><strong>₹@Model.Amount.ToString("F2")</strong></span>
                            </p>
                            <p class="mb-0">
                                <strong>Status:</strong><br />
                                <span class="badge bg-success fs-6">@Model.PaymentStatus</span>
                            </p>
                        </div>
                    </div>

                    <p class="text-muted">Your payment has been processed successfully. An email confirmation has been sent to your registered email address.</p>
                </div>
                <div class="card-footer">
                    <a href="@Url.Action("Index", "Payment")" class="btn btn-primary w-100 mb-2">
                        <i class="fas fa-history"></i> View Payment History
                    </a>
                    <a href="@Url.Action("Index", "Employee")" class="btn btn-secondary w-100">
                        <i class="fas fa-arrow-left"></i> Back to Employees
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
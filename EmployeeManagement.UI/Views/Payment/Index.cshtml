@model List<Payment>
@{
    ViewData["Title"] = "Payment History";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <div class="card shadow-lg">
                <div class="card-header bg-info text-white">
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <h4 class="mb-0">
                                <i class="fas fa-history"></i> Payment History
                            </h4>
                            <small>Employee ID: @ViewBag.EmployeeId</small>
                        </div>
                        <div class="col-md-4 text-end">
                            <div class="fs-5">
                                <strong>Total Paid:</strong> <span class="text-success">₹@ViewBag.TotalPayments.ToString("F2")</span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-warning">
                            <i class="fas fa-warning"></i> @ViewBag.Error
                        </div>
                    }

    <a href="@Url.Action("InitiatePayment")" class="btn btn-primary mb-3">Make Payment</a>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Order ID</th>
                <th>Transaction ID</th>
                <th>Amount</th>
                <th>Status</th>
                <th>Payment Method</th>
                <th>Created Date</th>
                <th>Completed Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var payment in Model)
            {
                <tr>
                    <td>@payment.OrderId</td>
                    <td>@payment.TransactionId</td>
                    <td>₹@payment.Amount.ToString("F2")</td>
                    <td>
                        @if (payment.PaymentStatus == "Completed")
                        {
                            <span class="badge bg-success">@payment.PaymentStatus</span>
                        }
                        else if (payment.PaymentStatus == "Failed")
                        {
                            <span class="badge bg-danger">@payment.PaymentStatus</span>
                        }
                        else
                        {
                            <span class="badge bg-warning">@payment.PaymentStatus</span>
                        }
                    </td>
                    <td>@payment.PaymentMethod</td>
                    <td>@payment.CreatedDate.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>@(payment.CompletedDate?.ToString("dd/MM/yyyy HH:mm") ?? "N/A")</td>
                </tr>
            }
        </tbody>
    </table>
</div>
@using EmployeeManagement.UI.ViewModels
@model List<EmployeeViewModel>

<div class="container mt-4">

    <div class="row align-items-center mb-3">
        <!-- Left: Create button -->
        <div class="col-md-6">
            <a href="/Employee/Create" class="btn btn-success">
                Create Employee
            </a>
        </div>

        <!-- Right: Search box -->
        <div class="col-md-6 d-flex justify-content-end">
            <input type="text"
                   id="deptSearch"
                   class="form-control"
                   style="max-width:300px"
                   placeholder="Search by Department..." />
        </div>
    </div>    <!-- Employee Table -->
    <div class="table-responsive">
        <table class="table table-striped table-hover table-bordered align-middle">
            <thead class="table-dark text-center">
                <tr>
                    <th style="width:5%">Id</th>
                    <th style="width:20%">Name</th>
                    <th style="width:25%">Email</th>
                    <th style="width:20%">Department</th>
                    <th style="width:15%">Salary</th>
                    <th style="width:15%">Actions</th>
                </tr>
            </thead>

            <tbody>
                @if (Model != null && Model.Any())
                {
                    @foreach (var emp in Model)
                    {
                        <tr>
                            <td class="text-center">@emp.Id</td>
                            <td>@emp.Name</td>
                            <td>@emp.Email</td>
                            <td>@emp.DepartmentName</td>
                            <td>@emp.Salary.ToString("C")</td>
                            <td class="text-center">
                                <a href="/Employee/Edit/@emp.Id" class="btn btn-sm btn-primary me-1">Edit</a>
                                <a href="/Employee/Delete/@emp.Id" class="btn btn-sm btn-danger">Delete</a>
                                <a href="/Payment/Index/@emp.Id" class="btn btn-sm btn-danger">Payment</a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center text-muted">
                            No employees found
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section scripts {
            <script>
                document.getElementById("deptSearch").addEventListener("keyup", function () {
                    let filter = this.value.toLowerCase();
                    let rows = document.querySelectorAll("tbody tr");

                    rows.forEach(row => {
                        let deptCell = row.cells[3]; // Department column index
                        if (!deptCell) return;

                        let dept = deptCell.textContent.toLowerCase();
                        row.style.display = dept.includes(filter) ? "" : "none";
                    });
                });



@{
    ViewData["Title"] = "Employees";
    var permissions = Context.Session.GetString("Permissions")?.Split(',') ?? Array.Empty<string>();
    var canCreate = permissions.Contains("Employee.Create");
    var canUpdate = permissions.Contains("Employee.Update");
    var canDelete = permissions.Contains("Employee.Delete");
    var canExport = permissions.Contains("Employee.Export");
    var canImport = permissions.Contains("Employee.Import");
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-users me-2"></i>Employees</h2>
    <div>
        @if (canImport)
        {
            <button class="btn btn-success me-2" data-bs-toggle="modal" data-bs-target="#importModal">
                <i class="fas fa-file-import me-1"></i>Import
            </button>
        }
        @if (canExport)
        {
            <button class="btn btn-info me-2" id="btnExport">
                <i class="fas fa-file-export me-1"></i>Export
            </button>
        }
        @if (canCreate)
        {
            <a href="@Url.Action("Create")" class="btn btn-primary">
                <i class="fas fa-plus me-1"></i>Add Employee
            </a>
        }
    </div>
</div>

<!-- Search and Filter -->
<div class="card mb-4">
    <div class="card-body">
        <div class="row g-3">
            <div class="col-md-4">
                <input type="text" id="searchTerm" class="form-control" placeholder="Search by name or email...">
            </div>
            <div class="col-md-3">
                <select id="filterDepartment" class="form-select">
                    <option value="">All Departments</option>
                    <option value="IT">IT</option>
                    <option value="HR">HR</option>
                    <option value="Finance">Finance</option>
                </select>
            </div>
            <div class="col-md-2">
                <select id="filterStatus" class="form-select">
                    <option value="">All Status</option>
                    <option value="true">Active</option>
                    <option value="false">Inactive</option>
                </select>
            </div>
            <div class="col-md-3">
                <button class="btn btn-outline-primary me-2" id="btnSearch">
                    <i class="fas fa-search"></i> Search
                </button>
                <button class="btn btn-outline-secondary" id="btnClear">
                    <i class="fas fa-times"></i> Clear
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Employee Table -->
<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover" id="employeeTable">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Department</th>
                        <th>Role</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody id="employeeTableBody">
                    <!-- Data loaded via AJAX -->
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center" id="pagination">
            </ul>
        </nav>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this employee?</p>
                <p class="text-muted small">This action can be undone by an administrator.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmDelete">Delete</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        var canUpdate = @canUpdate.ToString().ToLower();
        var canDelete = @canDelete.ToString().ToLower();
        var currentPage = 1;
        var pageSize = 10;
        var deleteEmployeeId = null;

        $(document).ready(function() {
            loadEmployees();

            $('#btnSearch').click(function() {
                currentPage = 1;
                loadEmployees();
            });

            $('#btnClear').click(function() {
                $('#searchTerm').val('');
                $('#filterDepartment').val('');
                $('#filterStatus').val('');
                currentPage = 1;
                loadEmployees();
            });

            $('#confirmDelete').click(function() {
                if (deleteEmployeeId) {
                    deleteEmployee(deleteEmployeeId);
                }
            });
        });

        function loadEmployees() {
            var params = {
                pageNumber: currentPage,
                pageSize: pageSize,
                searchTerm: $('#searchTerm').val(),
                department: $('#filterDepartment').val(),
                isActive: $('#filterStatus').val()
            };

            $.ajax({
                url: '/api/employees',
                type: 'GET',
                data: params,
                success: function(response) {
                    if (response.status) {
                        renderTable(response.data);
                        renderPagination(response.data.totalPages, response.data.pageNumber);
                    }
                },
                error: function(xhr) {
                    if (xhr.status === 401) {
                        window.location.href = '/Account/Login';
                    } else {
                        alert('Error loading employees');
                    }
                }
            });
        }

        function renderTable(data) {
            var html = '';
            if (data.items && data.items.length > 0) {
                data.items.forEach(function(emp) {
                    html += '<tr>';
                    html += '<td>' + emp.id + '</td>';
                    html += '<td>' + emp.name + '</td>';
                    html += '<td>' + emp.email + '</td>';
                    html += '<td>' + emp.department + '</td>';
                    html += '<td><span class="badge bg-info">' + emp.role + '</span></td>';
                    html += '<td>' + (emp.isActive
                        ? '<span class="badge bg-success">Active</span>'
                        : '<span class="badge bg-secondary">Inactive</span>') + '</td>';
                    html += '<td>';
                    html += '<a href="/Employee/Details/' + emp.id + '" class="btn btn-sm btn-outline-info me-1" title="View"><i class="fas fa-eye"></i></a>';
                    if (canUpdate) {
                        html += '<a href="/Employee/Edit/' + emp.id + '" class="btn btn-sm btn-outline-primary me-1" title="Edit"><i class="fas fa-edit"></i></a>';
                    }
                    if (canDelete) {
                        html += '<button class="btn btn-sm btn-outline-danger" onclick="showDeleteModal(' + emp.id + ')" title="Delete"><i class="fas fa-trash"></i></button>';
                    }
                    html += '</td>';
                    html += '</tr>';
                });
            } else {
                html = '<tr><td colspan="7" class="text-center">No employees found</td></tr>';
            }
            $('#employeeTableBody').html(html);
        }

        function renderPagination(totalPages, currentPage) {
            var html = '';
            for (var i = 1; i <= totalPages; i++) {
                html += '<li class="page-item ' + (i === currentPage ? 'active' : '') + '">';
                html += '<a class="page-link" href="#" onclick="goToPage(' + i + ')">' + i + '</a>';
                html += '</li>';
            }
            $('#pagination').html(html);
        }

        function goToPage(page) {
            currentPage = page;
            loadEmployees();
        }

        function showDeleteModal(id) {
            deleteEmployeeId = id;
            $('#deleteModal').modal('show');
        }

        function deleteEmployee(id) {
            $.ajax({
                url: '/api/employees/' + id,
                type: 'DELETE',
                success: function(response) {
                    $('#deleteModal').modal('hide');
                    if (response.status) {
                        loadEmployees();
                        alert('Employee deleted successfully');
                    }
                },
                error: function(xhr) {
                    $('#deleteModal').modal('hide');
                    if (xhr.status === 403) {
                        alert('You do not have permission to delete employees');
                    } else {
                        alert('Error deleting employee');
                    }
                }
            });
        }
    </script>
}
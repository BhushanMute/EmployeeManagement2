@model EmployeeManagement.UI.ViewModels.EmployeeViewModel

@{
    ViewData["Title"] = "Delete Employee";
}

<h2>Delete Employee</h2>

<div class="card p-4 shadow-sm mt-4">
    <div class="alert alert-warning">
        <strong>Warning!</strong> You are about to delete this employee. This action cannot be undone.
    </div>

    <dl class="row">
        <dt class="col-sm-3">Name:</dt>
        <dd class="col-sm-9">@Model.Name</dd>

        <dt class="col-sm-3">Email:</dt>
        <dd class="col-sm-9">@Model.Email</dd>

        <dt class="col-sm-3">Department:</dt>
        <dd class="col-sm-9">@Model.DepartmentName</dd>

        <dt class="col-sm-3">Salary:</dt>
        <dd class="col-sm-9">@Model.Salary.ToString("C")</dd>
    </dl>

    <form action="/Employee/DeleteConfirmed" method="post">
        <input type="hidden" asp-for="@Model.Id" />

        <button type="submit" class="btn btn-danger me-2">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
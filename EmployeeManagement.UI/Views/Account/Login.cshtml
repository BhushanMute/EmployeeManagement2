@model LoginModel

@{
    ViewData["Title"] = "Login";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white text-center">
                    <h2 class="mb-0">Login</h2>
                </div>
                <div class="card-body">

                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger text-center">
                            @ViewBag.Error
                        </div>
                    }

                    <form asp-action="Login" method="post" class="needs-validation" novalidate>
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Username</label>
                            <input asp-for="Email" class="form-control" placeholder="Enter username" required />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">Password</label>
                            <input asp-for="Password" type="password" class="form-control" placeholder="Enter password" required />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">Login</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <p class="mb-0">
                        Don't have an account?
                        <a asp-action="Register" class="text-primary">Register here</a>
                    </p>
                    <div class="social-logins">
                        <a class="btn btn-primary" href="/Account/FacebookLogin">
                            <i class="fab fa-facebook"></i> Login with Facebook
                        </a>

                        <a class="btn btn-danger" href="/Account/GoogleLogin">
                            <i class="fab fa-google"></i> Login with Google
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


                                        <span class="input-group-text bg-light">
                                            <i class="fas fa-user-tag text-success"></i>
                                        </span>
                                        <select asp-for="RoleId" class="form-select" asp-items="@ViewBag.Roles">
                                            <option value="">-- Select Role --</option>
                                        </select>
                                    </div>
                                    <span asp-validation-for="RoleId" class="text-danger small"></span>
                                </div>
                            </div>
                        }
                        else
                        {
                            <input type="hidden" asp-for="RoleId" value="4" />
                        }

                        <!-- ========== Terms & Submit ========== -->
                        <div class="row align-items-center mt-4 pt-3 border-top">
                            <div class="col-md-6">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="agreeTerms" required>
                                    <label class="form-check-label" for="agreeTerms">
                                        I agree to the <a href="#" class="text-success">Terms of Service</a> and
                                        <a href="#" class="text-success">Privacy Policy</a>
                                    </label>
                                </div>
                            </div>
                            <div class="col-md-6 text-md-end mt-3 mt-md-0">
                                <button type="reset" class="btn btn-outline-secondary me-2">
                                    <i class="fas fa-undo me-1"></i>Reset
                                </button>
                                <button type="submit" class="btn btn-success btn-lg px-5" id="submitBtn">
                                    <i class="fas fa-user-plus me-2"></i>Create Account
                                </button>
                            </div>
                        </div>
                    </form>

                    <!-- Divider -->
                    <div class="text-center my-4">
                        <span class="divider-text text-muted">or register with</span>
                    </div>

                    <!-- Social Login - Horizontal -->
                    <div class="row g-3">
                        <div class="col-md-6">
                            <a asp-controller="Account" asp-action="ExternalLogin" asp-route-provider="Google"
                               class="btn btn-outline-danger btn-lg w-100">
                                <i class="fab fa-google me-2"></i>Continue with Google
                            </a>
                        </div>
                        <div class="col-md-6">
                            <a asp-controller="Account" asp-action="ExternalLogin" asp-route-provider="Facebook"
                               class="btn btn-outline-primary btn-lg w-100">
                                <i class="fab fa-facebook-f me-2"></i>Continue with Facebook
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Footer -->
                <div class="card-footer text-center py-3 bg-light rounded-bottom-4">
                    <p class="mb-0">
                        Already have an account?
                        <a asp-action="Login" class="text-success fw-bold text-decoration-none">
                            <i class="fas fa-sign-in-alt me-1"></i>Login here
                        </a>

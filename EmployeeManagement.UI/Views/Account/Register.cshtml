@model EmployeeManagement.UI.Models.RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="register-hero">
    <div class="container-fluid p-0 h-100">
        <div class="row g-0 h-100 align-items-center">
            <!-- Left Side: Hero Image/Gradient -->
            <div class="col-lg-6 hero-section d-none d-lg-block">
                <div class="hero-content">
                    <h1 class="hero-title">Welcome to Your Team</h1>
                    <p class="hero-subtitle">Join our modern employee management platform and start collaborating today.</p>
                    <div class="hero-features">
                        <div class="feature-item">
                            <i class="fas fa-check-circle text-primary"></i>
                            <span>Secure & Fast</span>
                        </div>
                        <div class="feature-item">
                            <i class="fas fa-check-circle text-primary"></i>
                            <span>Role Management</span>
                        </div>
                        <div class="feature-item">
                            <i class="fas fa-check-circle text-primary"></i>
                            <span>Easy Access</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Right Side: Form Card -->
            <div class="col-lg-6 col-12">
                <div class="card glass-card shadow-xl mx-auto my-5">
                    <div class="card-body p-5 p-lg-6">

                        <!-- Messages -->
                        @if (TempData["SuccessMessage"] != null)
                        {
                            <div class="alert alert-success alert-dismissible fade show rounded-3" role="alert">
                                <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        }

                        @if (ViewBag.Error != null)
                        {
                            <div class="alert alert-danger alert-dismissible fade show rounded-3" role="alert">
                                <i class="fas fa-exclamation-circle me-2"></i>@ViewBag.Error
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        }

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3" role="alert"></div>

                        <!-- Header -->
                        <div class="text-center mb-5">
                            <div class="avatar-circle mb-3 mx-auto">
                                <i class="fas fa-user-plus fa-2x text-white"></i>
                            </div>
                            <h2 class="fw-bold mb-2">Create Account</h2>
                            <p class="text-muted mb-0">Join our team in minutes</p>
                        </div>

                        <form asp-action="Register" method="post" id="registerForm" novalidate>

                            <!-- Personal Info -->
                            <div class="row g-3 mb-4">
                                <div class="col-md-6">
                                    <label asp-for="FirstName" class="form-label fw-semibold text-dark">First Name *</label>
                                    <input asp-for="FirstName" class="form-control modern-input" placeholder="John" required />
                                    <span asp-validation-for="FirstName" class="text-danger small"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="LastName" class="form-label fw-semibold text-dark">Last Name *</label>
                                    <input asp-for="LastName" class="form-control modern-input" placeholder="Doe" required />
                                    <span asp-validation-for="LastName" class="text-danger small"></span>
                                </div>
                            </div>

                            <!-- Contact Info -->
                            <div class="row g-3 mb-4">
                                <div class="col-md-6">
                                    <label asp-for="Email" class="form-label fw-semibold text-dark">Email *</label>
                                    <input asp-for="Email" type="email" class="form-control modern-input" placeholder="john@example.com" required />
                                    <span asp-validation-for="Email" class="text-danger small"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="PhoneNumber" class="form-label fw-semibold text-dark">Phone (Optional)</label>
                                    <input asp-for="PhoneNumber" type="tel" class="form-control modern-input" placeholder="+1 234 567 8900" />
                                    <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                                </div>
                            </div>

                            <!-- Account Info -->
                            <div class="row g-3 mb-4">
                                <div class="col-md-6">
                                    <label asp-for="Username" class="form-label fw-semibold text-dark">Username *</label>
                                    <input asp-for="Username" class="form-control modern-input" placeholder="john_doe" required />
                                    <span asp-validation-for="Username" class="text-danger small"></span>
                                </div>
                            </div>

                            <!-- Password Section -->
                            <div class="row g-3 mb-4">
                                <div class="col-md-6">
                                    <label asp-for="Password" class="form-label fw-semibold text-dark">Password *</label>
                                    <div class="password-input-group">
                                        <input asp-for="Password" type="password" class="form-control modern-input ps-5" id="password" required />
                                        <button type="button" class="toggle-btn" id="togglePassword">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                    </div>
                                    <div class="strength-bar mt-2">
                                        <div class="strength-progress" id="passwordStrength"></div>
                                        <small id="passwordStrengthText" class="text-muted">Enter password</small>
                                    </div>
                                    <span asp-validation-for="Password" class="text-danger small"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="ConfirmPassword" class="form-label fw-semibold text-dark">Confirm Password *</label>
                                    <div class="password-input-group">
                                        <input asp-for="ConfirmPassword" type="password" class="form-control modern-input ps-5" id="confirmPassword" required />
                                        <button type="button" class="toggle-btn" id="toggleConfirmPassword">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                    </div>
                                    <div id="passwordMatch" class="mt-2 small"></div>
                                </div>
                            </div>

                            <!-- Role Selection (Admin Only) -->
                            @if (ViewBag.ShowRoleSelection == true)
                            {
                                <div class="mb-4">
                                    <label asp-for="RoleId" class="form-label fw-semibold text-dark">Role *</label>
                                    <select asp-for="RoleId" class="form-select modern-select" required>
                                        <option value="">Select Role</option>
                                        @foreach (var role in ViewBag.Roles)
                                        {
                                            <option value="@role.Value">@role.Text</option>
                                        }
                                    </select>
                                    <span asp-validation-for="RoleId" class="text-danger small"></span>
                                </div>
                            }
                            else
                            {
                                <input type="hidden" asp-for="RoleId" value="4" />
                            }

                            <!-- Terms & Submit -->
                            <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3 mb-4">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="agreeTerms" required>
                                    <label class="form-check-label small text-muted" for="agreeTerms">
                                        I agree to Terms & Privacy Policy
                                    </label>
                                </div>
                                <button type="submit" class="btn btn-primary btn-lg w-100 w-md-auto px-5 py-2" id="submitBtn">
                                    <i class="fas fa-user-plus me-2"></i>Create Account
                                </button>
                            </div>

                            <!-- Social Login -->
                            <div class="text-center">
                                <span class="divider">or continue with</span>
                                <div class="social-buttons mt-3">
                                    <a asp-controller="Account" asp-action="ExternalLogin" asp-route-provider="Google" class="btn btn-outline-google">
                                        <i class="fab fa-google me-2"></i>Google
                                    </a>
                                    <a asp-controller="Account" asp-action="ExternalLogin" asp-route-provider="Facebook" class="btn btn-outline-facebook ms-2">
                                        <i class="fab fa-facebook-f me-2"></i>Facebook
                                    </a>
                                </div>
                            </div>
                        </form>

                        <!-- Footer -->
                        <div class="text-center mt-4 pt-3">
                            <p class="mb-0 text-muted small">
                                Already have an account?
                                <a asp-action="Login" class="text-primary fw-semibold text-decoration-none">Sign in</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        :root {
            --primary-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            --glass-bg: rgba(255, 255, 255, 0.25);
            --glass-border: rgba(255, 255, 255, 0.18);
            --shadow-xl: 0 25px 45px -12px rgba(0, 0, 0, 0.25);
        }

        body {
            background: linear-gradient(-45deg, #ee7752, #e73c7e, #23a6d5, #23d5ab);
            background-size: 400% 400%;
            animation: gradientShift 15s ease infinite;
            min-height: 100vh;
        }

        @@keyframes gradientShift {
            0% {
                background-position: 0% 50%;
            }

            50% {
                background-position: 100% 50%;
            }

            100% {
                background-position: 0% 50%;
            }
        }

        .register-hero {
            min-height: 100vh;
            display: flex;
            align-items: center;
        }

